<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/japan01"
    tools:context="com.example.pc.myapplication.choosing">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Please choose either 1"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="26sp" />

    <Button
        android:id="@+id/button18"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:text="Tokyo"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button19"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:text="Kyoto"
        android:textSize="14sp"
        android:layout_below="@+id/button18"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button20"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:text="Okinawa"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_below="@+id/button19"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button21"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:text="Osaka"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_below="@+id/button20"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button22"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:text="Nagoya"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_below="@+id/button21"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button23"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:text="Akihabara"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_below="@+id/button22"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button24"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:text="Nagasaki"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_below="@+id/button23"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button25"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:text="Hokkaido"
        android:textAlignment="center"
        android:layout_below="@+id/button24"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
